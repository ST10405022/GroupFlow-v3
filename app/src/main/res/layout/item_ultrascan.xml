<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="false"
    android:focusable="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Scan Number -->
        <TextView
            android:id="@+id/scanNumberTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/scan_file"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnView"
            app:layout_constraintBottom_toTopOf="@id/textFileName"
            app:layout_constraintHorizontal_bias="0" />

        <!-- File Name -->
        <TextView
            android:id="@+id/textFileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/file_name"
            android:textSize="14sp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            app:layout_constraintTop_toBottomOf="@id/scanNumberTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDownload"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0" />

        <!-- View button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/view"
            app:icon="@drawable/ic_view"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/scanNumberTextView"
            app:layout_constraintBottom_toTopOf="@id/btnDownload" />

        <!-- Download button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDownload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/download"
            app:icon="@drawable/ic_download"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/scanNumberTextView"
            app:layout_constraintTop_toBottomOf="@id/btnView"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
